<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password | CSE Motors</title>
    <link rel="stylesheet" href="/css/account.css">
    <script src="/js/script.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
    <div class="login-wrapper">
        <div class="login-container">
            <!-- Display Flash Messages -->
            <% if (messages && messages.success) { %>
                <div class="success-message">
                    <%= messages.success %>
                </div>
            <% } %>

            <% if (messages && messages.error) { %>
                <div class="error-message">
                    <%= messages.error %>
                </div>
            <% } %>

            <!-- Display Validation Errors -->
            <% if (errors && errors.length > 0) { %>
                <div class="error-message">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <h1><i class="fas fa-key"></i> Change Password</h1>
            <p class="required-indicator"><span>*</span> All fields are required</p>

            <form id="changePasswordForm" action="/account/change-password" method="post">
                <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

                <label for="account_password">New Password: <span class="required">*</span></label>
                <div class="password-container">
                    <input type="password" id="account_password" name="account_password" required
                           pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                           placeholder="Create a strong password">
                    <i class="fa-solid fa-eye password-toggle" id="togglePassword"></i>
                </div>
                <span class="password-requirements">
                    Password must be at least 12 characters and contain at least 1 uppercase letter, 1 lowercase letter, 1 number, and 1 special character.
                </span>

                <button type="submit">Change Password</button>
            </form>

            <p><a href="/account/update/<%= accountData.account_id %>">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                 Back to Account Update</a></p>
        </div>
    </div>
</body>
</html>
