<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/inventory.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <title><%= title %></title>

</head>
<body>
    <div class="login-wrapper">
        <div class="login-container">
            <i class="fa fa-edit"></i>

            <% if (title) { %>
                <h1><%= title %></h1>
            <% } else { %>
                <% res.redirect('/') %>
            <% } %>

            <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>

            <p class="required-indicator"><span>*</span> All fields are required</p>
            <form id="editInventoryForm" action="/inv/update" method="post" enctype="multipart/form-data">
                <input type="hidden" name="inv_id" value="<%= inv_id %>">

                <label for="inv_make">Make: <span class="required">*</label>
                <input type="text" id="inv_make" name="inv_make" required
                placeholder="Enter Vehicle Make" value="<%= inv_make %>">

                <label for="inv_model">Model: <span class="required">*</span></label>
                <input type="text" id="inv_model" name="inv_model" required
                placeholder="Enter Vehicle Model" value="<%= inv_model %>">

                <label for="inv_year">Year: <span class="required">*</span></label>
                <input type="number" id="inv_year" name="inv_year" required
                placeholder="Enter Vehicle Year" value="<%= inv_year %>">

                <label for="inv_description">Description: <span class="required">*</span></label>
                <textarea id="inv_description" name="inv_description"
                    placeholder="Enter Vehicle Description" required
                    style="min-height: 100px;"><%= inv_description %></textarea>

                <label for="inv_image">Image: <span class="required">*</span></label>
                <input type="file" id="inv_image" name="inv_image" accept="image/*">

                <label for="inv_thumbnail">Thumbnail: <span class="required">*</span></label>
                <input type="file" id="inv_thumbnail" name="inv_thumbnail" accept="image/*">

                <label for="inv_price">Price: <span class="required">*</span></label>
                <input type="number" id="inv_price" name="inv_price" required value="<%= inv_price %>">

                <label for="inv_miles">Miles: <span class="required">*</span></label>
                <input type="number" id="inv_miles" name="inv_miles" required value="<%= inv_miles %>">

                <label for="inv_color">Color: <span class="required">*</span></label>
                <input type="text" id="inv_color" name="inv_color" required
                placeholder="Enter Vehicle Color" value="<%= inv_color %>">

                <label for="classification_id">Classification: <span class="required">*</span></label>
                <div class="input-container">
                    <%- classificationSelect %>
                </div>

                <!-- <button type="submit">Update Vehicle</button> -->
                <button type="submit" class="edit" disabled>Update Vehicle</button>

            </form>
        </div>
    </div>
    <script src="/js/inv-update.js"></script>
</body>
</html>
